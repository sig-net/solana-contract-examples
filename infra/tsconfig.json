{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "baseUrl": "..",
    "paths": {
      "@/*": ["frontend/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts", "../frontend/**/*.ts", "../frontend/**/*.tsx"],
  "exclude": ["../frontend/.next", "../frontend/node_modules"]
}
